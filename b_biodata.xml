<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context=".BuatBiodata"
    android:id="@+id/b_biodata">

    <TextView
        android:id="@+id/idRS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text=" "/>

    <TextView
        android:id="@+id/namars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fieldidrs"
        android:layout_below="@+id/fieldidrs"
        android:layout_marginTop="10dp"
        android:text="Username" />



    <EditText
        android:id="@+id/fieldnamars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namars"
        android:layout_alignLeft="@+id/namars"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:inputType="text"
        android:maxLength="100" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fieldalamatrs"
        android:layout_alignRight="@+id/fieldalamatrs"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="423dp"
        android:text="Input Nama" />

</RelativeLayout>